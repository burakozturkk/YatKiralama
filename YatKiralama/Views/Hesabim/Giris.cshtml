
    <style type="text/css">
        .login-form {
            width: 340px;
            margin: 50px auto;
        }

            .login-form form {
                margin-bottom: 15px;
                background: #f7f7f7;
                box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
                padding: 30px;
            }

            .login-form h2 {
                margin: 0 0 15px;
            }

        .form-control, .btn {
            min-height: 38px;
            border-radius: 2px;
        }

        .btn {
            font-size: 15px;
            font-weight: bold;
        }
    </style>

    <div class="login-form">
        <form action="/Hesabim/Giris" method="post">
            <h2 class="text-center">Giriş Yap</h2>
            <p class="text-center" style="color:red">@ViewBag.error</p>
            <div class="form-group">
                <input type="text" class="form-control" name="Mail" placeholder="E-Posta" required="required">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" name="Sifre" placeholder="Şifre" required="required">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block" name="name">Giriş Yap</button>
            </div>
            <div class="clearfix">
                @*<label class="pull-left checkbox-inline"><input type="checkbox"> Beni Hatırla</label>*@
                <a href="#" class="pull-right">Şifreni mi Unuttun?</a>
            </div>
        </form>
        <p class="text-center"><a href="/Hesabim/Kayit">Kayıt Ol</a></p>
    </div>
                            		