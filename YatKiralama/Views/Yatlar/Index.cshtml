@model IEnumerable<YatKiralama.Models.Yat>
@{
    ViewData["Title"] = "Yatlar";
}
    
<!-- Product -->
<div class="bg0 m-t-23 p-b-140">
    <div class="container">
        <div class="flex-w flex-sb-m p-b-52">
            <div class="flex-w flex-l-m filter-tope-group m-tb-10">
                <button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5 how-active1" data-filter="*">
                    Bütün Yatlar @ViewBag.error
                </button>
            </div>
        </div>
        <div class="row isotope-grid">
            @for (int i = 0; i < 3; i++)
            {
                @foreach (var item in Model)
                {

                    <div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item women">
                        <!-- Block2 -->
                        <div class="block2">
                            <div class="block2-pic hov-img0">
                                <img src="@item.ImgLocation" alt="IMG-PRODUCT">

                                <a href="/Yatlar/Detay/@item.Id" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04">
                                    İNCELE
                                </a>
                            </div>

                            <div class="block2-txt flex-w flex-t p-t-14">
                                <div class="block2-txt-child1 flex-col-l ">
                                    <a asp-action="Detay" asp-route-id="@item.Id" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">@item.Name</a>


                                    <span class="stext-105 cl3">
                                        @item.Price <a>₺</a>
                                    </span>
                                </div>

                               
                            </div>
                        </div>

                    </div>
                }
            }

        </div>
    </div>
</div>
<script>
    $('#yatlar').addClass('active-menu');
    
</script>