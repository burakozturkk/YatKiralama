@model IEnumerable<YatKiralama.Models.Yat>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
    <div class="container" style="margin-top:100px;margin-bottom:100px">
        <p>
            <a asp-action="Create">Create New</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Length)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Capacity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Details)
                    </th>
                   
                    <th>
                        @Html.DisplayNameFor(model => model.ImgLocation)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ImgLocation2)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ImgLocation3)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Length)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Capacity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Details)
                        </td>
                      
                        <td>
                            @Html.DisplayFor(modelItem => item.ImgLocation)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ImgLocation2)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ImgLocation3)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>


    </div>
